#!/usr/bin/env node

const program = require('commander')
const chalk = require('chalk')

const Page = require('../src/create/page')

const { getConf } = require('../src/build')

program
  .usage('<pageName> [options]')
  .option('--name [pageName]', 'Page name')
  .option('--description [pageDescription]', 'Page description')
  .option('--debug', 'Debug info')
  .parse(process.argv)

  const args = program.args

  const pageName = args[0] || program.name

  const description = program.description || ''

  const conf = getConf()
  const appConf = conf.appConf
  const moduleConf = conf.moduleConf

  if (appConf.template === 'complete') {
    if (!appConf && !moduleConf) {
      console.log(chalk.red(`Is not a Athena App module, please check if the file mod.conf actually exists!ðŸ˜¢`))
      return
    } else if (appConf && !moduleConf) {
      console.log(chalk.red(`Current dir is an app, please go to the module dir!ðŸ˜¢`))
      return
    }
  } else {
    if (!appConf) {
      console.log(chalk.red(`Is not a Simple Athena App, please check if the file app.conf actually exists!ðŸ˜¢`))
      return
    }
  }


  const appName = appConf.app
  const template = appConf.template
  const framework = appConf.framework
  const sass = appConf.sass

  const page = new Page({
    appName,
    template,
    framework,
    pageName,
    description,
    sass
  })

  page.create()
